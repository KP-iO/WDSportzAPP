<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wdsportz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/wd_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wd_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">


        <activity
            android:name=".MainActivities.Auth_Activity"
            android:label="@string/wdsportz"
            android:theme="@style/AppTheme1.Launcher">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivities.Auth_Activity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.Main_Activity"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainFragments.Frag_Watch"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".videoPlayback_Activity"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LivestreamFragment"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainFragments.Frag_iniTeamSelect"
            android:theme="@style/AppTheme1"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainFragments.Frag_iniTeamSelect_teams"
            android:theme="@style/AppTheme1"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainFragments.Frag_HomePage"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".Service.MyService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>