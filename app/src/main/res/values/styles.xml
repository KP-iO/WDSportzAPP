<resources>

    <!-- â€ŠBase application theme. -->
    <style name="AppTheme1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/WD_yellow</item>
        <item name="colorPrimaryDark">@color/WD_Green</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/WD_yellow</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme1.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AppTheme1.NoActionBar">
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/WD_yellow</item>
    </style>

    <style name="AppTheme1.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme1.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App"
        parent="Theme.MaterialComponents">
        <item name="materialCardViewStyle">@color/colorTransparent</item>
    </style>



</resources>
