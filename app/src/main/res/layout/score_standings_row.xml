<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/standingRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/txtRankNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgTeamLogo"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blank_team_profile" />

        <TextView
            android:id="@+id/txtTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="16dp"
            app:autoSizeMinTextSize="12dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/txtWon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="2"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtLost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="2"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDrawn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="2"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtPoints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="3"
            android:textColor="@color/colorBlack"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/txtForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="TextView"
            android:textSize="14sp" />

    </TableRow>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow" />

</androidx.constraintlayout.widget.ConstraintLayout>
